/* pages/financing/finacing.wxss */
.empty_tip{
  position: fixed;
  height: 100%;
  width: 100%;
  background-color: #999; 
}
.sort_key_area{
  width:100%;
  display:flex;
  flex-direction:row;
  background-color:#ffffff;
}
.sort_key_button_yield_normal{
 width:20%;
 margin-left:3%;
 margin-bottom:2%;
 margin-top:2%;
}
.sort_key_button_yield_is_checked{
 width:20%;
 margin-left:3%;
 margin-bottom:2%;
 margin-top:2%;
 color:#78c4ec;
}
.sort_key_button_arrow{
  width:50rpx;
  height:60rpx;
  margin-bottom:2%;
  margin-top:2%;
  margin-right:5%;
}
.sort_key_button_term{
  width:14%;
  margin-bottom:2%;
  margin-top:2%
}
.sort_key_button_closingDate{
  width:27%;
  margin-bottom:2%;
  margin-top:2%
}
.sort_key_button_filter{
  width:15%;
  margin-bottom:2%;
  margin-top:2%
}
.sort_key_button_funne{
  width:50rpx;
  height:60rpx;
  margin-bottom:2%;
  margin-top:1%;
  margin-right:5%
}
.list_item_area{
  margin:3% 3% 3% 3%;
  display:flex;
  flex-direction:column;
  height:218rpx;
  background-color:#ffffff;
  border-radius: 3%;
}
.list_item_name{
  font-size:30rpx;
  margin-left:2%;
  margin-top:2%;
}
.list_item_messageArea{
  display:flex;
  flex-direction:row;
  margin-left:2%;
  margin-top:4%
}
.list_item_yieldArea{
  display:flex;
  flex-direction:column;
  margin-right:10%;
}
.list_item_yieldNumber{
  color: #ff0000;
  font-size:50rpx;
}
.list_item_labelFont{
  font-size:20rpx;
  color: #aaa;
}
.list_item_dateArea{
  display:flex;
  flex-direction:column;
  margin-left:2%
}
.list_item_dateNumber{
  display:flex;
  flex-direction:row;
  margin-bottom:25rpx;
}
.bottom_button_area{
  width:100%;
  background-color:#ffffff;
  display: flex;
  margin-top: 3%;
}
.bottom_button{
  width:100%;
  background-color:#0000FF;
  margin:3% 3% 3% 3%;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color:transparent;
}